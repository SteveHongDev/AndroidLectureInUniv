<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:stretchColumns="1">
            <TableRow
                android:id="@+id/itemNetflix"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/netflix"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="넷플릭스"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemInstagram"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/instagram"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="인스타그램"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemTictok"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tictok"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="틱톡"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemYoutube"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/youtube"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="유튜브"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemCall"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/call"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="전화"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemDiscord"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/discord"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="디스코"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemLinkedin"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/linkedin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="링크드인"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemMessenger"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/messenger"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="메신저"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemSpotify"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/spotify"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="#ff0"
                    android:textSize="30sp"
                    android:text="스포티파이"/>
            </TableRow>
            <TableRow
                android:id="@+id/itemTwitter"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:padding="8dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/twitter"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="#ff0"
                android:textSize="30sp"
                android:text="트위터"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="맨 위로 이동"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll" />


</androidx.constraintlayout.widget.ConstraintLayout>